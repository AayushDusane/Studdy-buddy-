const quotes = [
  "Life is short. Live it. Fear is natural. Face it. Memory is powerful. Use it.", // Monday
  "We generate fears while we do nothing. We overcome these fears by taking action.", // Tuesday
  "It's never too late to be what you might have been.", // Wednesday
  "To change your life, you must first change your day.", // Thursday
  "Allow yourself to be a beginner. No one starts off being excellent.", // Friday
  "The man on top of the mountain didn’t fall there.", // Saturday
  "Be so good they can’t ignore you.", // Sunday
];

const today = new Date().getDay();

const quoteOfTheDay = quotes[today];

document.getElementById("quote").textContent = quoteOfTheDay;

const container = document.getElementById('excel-sheet');
const hot = new Handsontable(container, {
  data: Array(365).fill(Array(2).fill('')),
  colHeaders: true,
  rowHeaders: true,
  height: 500,
  stretchH: 'all',
  licenseKey: 'non-commercial-and-evaluation',
});

// Save and load data from localStorage
hot.addHook('afterChange', (changes, source) => {
  if (source !== 'loadData') {
    localStorage.setItem('excelSheetData', JSON.stringify(hot.getData()));
  }
});

const savedData = JSON.parse(localStorage.getItem('excelSheetData'));
if (savedData) {
  hot.loadData(savedData);
}


let isTimer = true;
        let timer;
        let time = 300;
        let running = false;
        
        function toggleMode() {
            reset();
            isTimer = !isTimer;
            document.querySelector('.toggle').textContent = isTimer ? "Switch to Stopwatch" : "Switch to Timer";
            document.getElementById('timerInput').style.display = isTimer ? "block" : "none";
            updateDisplay();
        }
        
        function start() {
            if (running) return;
            running = true;
            timer = setInterval(() => {
                if (isTimer) {
                    if (time > 0) time--; else pause();
                } else {
                    time++;
                }
                updateDisplay();
            }, 1000);
        }
        
        function pause() {
            running = false;
            clearInterval(timer);
        }
        
        function reset() {
            pause();
            time = isTimer ? 300 : 0;
            updateDisplay();
        }
        
        function updateDisplay() {
            let minutes = Math.floor(time / 60);
            let seconds = time % 60;
            document.querySelector('.display').textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }
        
        document.getElementById('timerInput').addEventListener('change', function() {
            time = this.value * 60;
            updateDisplay();
        });
        
        updateDisplay();

        // to do list //

        document.addEventListener("DOMContentLoaded", loadTasks);

        function addTask() {
            let taskInput = document.getElementById("taskInput");
            let taskText = taskInput.value.trim();
            if (taskText === "") return;

            let li = document.createElement("li");
            li.innerHTML = `${taskText} <button class='delete-btn' onclick='removeTask(this)'>X</button>`;
            document.getElementById("taskList").appendChild(li);

            saveTasks();
            taskInput.value = "";
        }

        function removeTask(button) {
            button.parentElement.remove();
            saveTasks();
        }

        function saveTasks() {
            let tasks = [];
            document.querySelectorAll("#taskList li").forEach(li => {
                tasks.push(li.innerText.replace("X", "").trim());
            });
            localStorage.setItem("tasks", JSON.stringify(tasks));
        }

        function loadTasks() {
            let tasks = JSON.parse(localStorage.getItem("tasks")) || [];
            tasks.forEach(task => {
                let li = document.createElement("li");
                li.innerHTML = `${task} <button class='delete-btn' onclick='removeTask(this)'>X</button>`;
                document.getElementById("taskList").appendChild(li);
            });
        }

        




        function saveEntry() {
          let entry = document.getElementById('journalEntry').value;
          let today = new Date().toISOString().split('T')[0]; // Get today's date in YYYY-MM-DD format
          localStorage.setItem('journal_' + today, entry);
          alert('Journal entry saved!');
      }

      // Load saved entry if available
      window.onload = function() {
          let today = new Date().toISOString().split('T')[0];
          let savedEntry = localStorage.getItem('journal_' + today);
          if (savedEntry) {
              document.getElementById('journalEntry').value = savedEntry;
          }
      };

